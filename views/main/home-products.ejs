<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <title>Online Shopper Category</title>
    <style>
      .card-img-top {
        height: 300px;
      }
      .my-h1 {
        padding-top: 30px;
      }
      .my-category {
        width: 30px;
        height: 30px;
        text-align: center;
      }
      .my-pagination {
        width: 30px;
        height: 30px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <% include ../partials/nav %>
    <div id="container" class="fluid">
      <main role="main">
        <% include ../partials/jumbotron %>
        <div class="container">
          <div class="row">
            <% for( let i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4" style="margin-bottom:30px;">
              <div class="card" style="border-radius:0">
                <a href="/api/products/single-product/<%=products[i]._id%>">
                  <img
                    src="<%=products[i].image%>"
                    alt="..."
                    class="card-img-top"
                  />
                  <div class="card-body">
                    <h5 class="card-title"><%= products[i].name %></h5>
                    <p class="card-text">
                      Category: <%= products[i].category.name %>
                    </p>
                    <p class="card-text">$<%= products[i].price %></p>
                    <br />
                    <a
                      href="/api/products/single-product/<%= products[i]._id %>"
                      class="btn btn-success"
                      >Buy Now</a
                    >
                  </div>
                </a>
              </div>
            </div>
            <% } %>
          </div>
          <div style="display:block">
            <ul class="pagination text-center">
              <% for( let j = 1; j <= pages; j++ ) { if(j===1){ %>
              <li class="my-pagination"><a href="/"><%= j %> </a></li>
              <% }else{ %>
              <li class="my-pagination">
                <a href="/page/<%= j %>"><%= j %> </a>
              </li>
              <% } %> <% } %>
            </ul>
          </div>
        </div>
      </main>
      <% include ../partials/footer %>
    </div>
    <% include ../partials/scripts %>
  </body>
</html>
